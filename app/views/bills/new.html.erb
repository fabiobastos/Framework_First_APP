<h4><%= t("new_bill") %></h4>

<%= 
# quando for form_tag em vez de form_for, não tem variável, e os text fields tem que ter o formato text_tag (tem que ter o _tag depois)
form_tag(create_bill_bills_path) do %>
	
<%= render partial: 'shared/error_messages', locals: {resource: @bill} %>

<%= label_tag :user_id, "Usuário" %>
<%= select_tag :user_id, options_from_collection_for_select(@users, :id, :name, @bill. user_id), prompt: "Selecione um usuário" %>

<%= label_tag :name, Bill.human_attribute_name(:name) %>
<%= text_field_tag :name, @bill.name %>

<%= label_tag :description, "Descrição" %>
<%= text_area_tag :description, @bill.description %>

<%= label_tag :date, "Data de Vencimento" %>
<%= text_field_tag :date, @bill.date %>

<%= label_tag :value, "Valor" %>
<%= text_field_tag :value, @bill.value %>

<div class="form-actions">
	<%= submit_tag t("save"), class: "btn btn-success" %>
</div>

<% end %>