<%= div_for(comment) do %>
	<blockquote>
		<p>
			<%= comment.content %>

			<%= link_to '<i class="icon-edit icon-white"></i>'.html_safe, edit_comment_path(comment), remote: true,  :class => "btn btn-inverse pull-right" %>
			<%= link_to '<i class="icon-remove icon-white"></i>'.html_safe, comment, remote: true, method: :delete, :class => "btn btn-danger pull-right" %>
		
		</p>


	</blockquote>
<% end %>