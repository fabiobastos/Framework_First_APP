<% if @comment.persisted? %>
	<% index_content = j(render partial: "comments/index", locals: {commentable: @comment.commentable}) %>
	$("#commentable_<%= @comment.commentable.class %>_<%= @comment.commentable.id %>").replaceWith("<%= index_content %>");
	$("#modal-comments").modal('hide');
<% else %>

<% end %>